    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle"
        android:layout_width="65dp"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="65dp"
        android:height="5dp"
        android:background="@color/bar"
        app:cardCornerRadius="50dp" />

    <TextView
        android:id="@+id/sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/dosis_extrabold"
        android:text="SORT BY"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/az"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/sort_by"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:cardCornerRadius="100dp"
        app:strokeWidth="2dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="122dp"
        android:background="@drawable/ic_atoz"
        android:elevation="2dp"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/za"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="100dp"
        android:layout_below="@+id/sort_by"
        android:layout_toRightOf="@+id/az"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:strokeWidth="2dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="122dp"
            android:background="@drawable/ic_ztoa"
            android:elevation="2dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/incr_size"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="100dp"
        android:layout_below="@+id/sort_by"
        android:layout_toRightOf="@+id/za"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:strokeWidth="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Size"
            android:fontFamily="@font/dosis_semibold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:elevation="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="252dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/ic_up"
            android:elevation="2dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/decr_size"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="100dp"
        android:layout_below="@+id/sort_by"
        android:layout_toRightOf="@+id/incr_size"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:strokeWidth="2dp"/>
