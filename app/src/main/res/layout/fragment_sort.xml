            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Size"
            android:fontFamily="@font/dosis_semibold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="130dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:elevation="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="352dp"
            android:layout_marginTop="132dp"
            android:background="@drawable/ic_down"
            android:elevation="2dp"/>
    //filter

    <TextView
        android:id="@+id/filter_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/az"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/dosis_extrabold"
        android:text="FILTER BY"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/filetype"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/filter_by"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/main_menu_background"
        app:cardCornerRadius="50dp"
        app:strokeWidth="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="305dp"
            android:background="@drawable/ic_expand"
            android:elevation="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="File type"
            android:fontFamily="@font/dosis_semibold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="300dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:elevation="2dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/time"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/filetype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/main_menu_background"
        app:cardCornerRadius="50dp"
        app:strokeWidth="2dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="395dp"
            android:background="@drawable/ic_expand"
            android:elevation="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Time"
            android:fontFamily="@font/dosis_semibold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="390dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:elevation="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:fontFamily="@font/dosis_semibold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@id/time"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>