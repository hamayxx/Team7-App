<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/bottom_sheet_corners_background"
    tools:context=".fragment.SortFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle"
        android:layout_width="65dp"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="65dp"
        android:height="5dp"
        android:background="@color/bar"
        app:cardCornerRadius="50dp" />

    <TextView
        android:id="@+id/sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/dosis_extrabold"
        android:text="SORT BY"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/az"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/sort_by"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:cardCornerRadius="100dp"
        app:strokeWidth="2dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="122dp"
        android:background="@drawable/ic_atoz"
        android:elevation="2dp"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/za"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="100dp"
        android:layout_below="@+id/sort_by"
        android:layout_toRightOf="@+id/az"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:strokeWidth="2dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="122dp"
            android:background="@drawable/ic_ztoa"
            android:elevation="2dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/incr_size"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="100dp"
        android:layout_below="@+id/sort_by"
        android:layout_toRightOf="@+id/za"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:strokeWidth="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Size"
            android:fontFamily="@font/dosis_semibold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:elevation="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="252dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/ic_up"
            android:elevation="2dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/decr_size"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="100dp"
        android:layout_below="@+id/sort_by"
        android:layout_toRightOf="@+id/incr_size"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/main_menu_background"
        app:strokeWidth="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Size"
            android:fontFamily="@font/dosis_semibold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="130dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:elevation="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="352dp"
            android:layout_marginTop="132dp"
            android:background="@drawable/ic_down"
            android:elevation="2dp"/>
    //filter

    <TextView
        android:id="@+id/filter_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/az"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/dosis_extrabold"
        android:text="FILTER BY"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/filetype"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/filter_by"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/main_menu_background"
        app:cardCornerRadius="50dp"
        app:strokeWidth="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="305dp"
            android:background="@drawable/ic_expand"
            android:elevation="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="295dp"
        android:elevation="2dp"
        android:fontFamily="@font/dosis_semibold"
        android:text="File type"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/time"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/filetype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/main_menu_background"
        app:cardCornerRadius="50dp"
        app:strokeWidth="2dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="395dp"
            android:background="@drawable/ic_expand"
            android:elevation="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="385dp"
        android:elevation="2dp"
        android:fontFamily="@font/dosis_semibold"
        android:text="Time"
        android:textColor="@color/white"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:fontFamily="@font/dosis_semibold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@id/time"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>