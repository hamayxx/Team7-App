<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_item_cv_item"
    android:layout_width="285dp"
    android:layout_height="59dp"
    android:backgroundTint="#F8F8F8"
    android:layout_marginBottom="15dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_item_iv_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_pdf"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_item_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_extrabold"
            android:textColor="#25252D"
            android:text="Draft.txt"
            android:textFontWeight="800"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_item_iv_logo"
            app:layout_constraintRight_toLeftOf="@id/item_item_btn_option"/>

        <TextView
            android:id="@+id/item_item_tv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_semibold"
            android:text="17 March 2022 | Used: 123MB"
            android:textColor="#A6AFBD"
            android:textFontWeight="600"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintLeft_toRightOf="@id/item_item_iv_logo"
            app:layout_constraintRight_toLeftOf="@id/item_item_btn_option"
            app:layout_constraintTop_toBottomOf="@id/item_item_tv_name" />

        <ImageButton
            android:id="@+id/item_item_btn_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icon_dot"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>