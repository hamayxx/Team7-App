<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_category_cv_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="149dp"
    android:layout_height="159dp"
    app:cardBackgroundColor="@color/category_background"
    android:layout_marginEnd="18dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_category_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/category_title"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/item_category_iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_document"
            android:backgroundTint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_category_tv_status"
            app:layout_constraintTop_toBottomOf="@id/item_category_tv_title"/>

        <TextView
            android:id="@+id/item_category_tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="26.7 GB (138)"
            android:textSize="17dp"
            android:textColor="@color/category_status"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/item_category_iv_icon"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>