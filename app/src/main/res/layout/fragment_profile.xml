<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/bottom_sheet_corners_background"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/rectangle"
            android:layout_width="65dp"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:width="65dp"
            android:height="5dp"
            android:background="@color/bar"
            app:cardCornerRadius="50dp" />

        <TextView
            android:id="@+id/fm_profile_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/iciel_smoothy_sans"
            android:text="PROFILE"
            android:textColor="@color/category_title"
            android:textFontWeight="400"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/fm_profile_tv_title_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fm_profile_tv_title"
            android:layout_marginStart="34dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/dosis_semibold"
            android:text="Personal info:"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="26sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_cv_user"
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:layout_below="@id/fm_profile_tv_title_personal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fm_profile_icon_user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/icon_user"
                    android:backgroundTint="@color/icon_color" />

                <TextView
                    android:id="@+id/fm_profile_et_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@id/fm_profile_icon_user"
                    android:background="@null"
                    android:fontFamily="@font/dosis_semibold"
                    android:singleLine="true"
                    android:textColor="@color/main_menu_background"
                    android:textFontWeight="600"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_cv_birthday"
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:layout_below="@id/fm_profile_cv_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fm_profile_icon_birthdate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/icon_birthday"
                    android:backgroundTint="@color/icon_color" />

                <TextView
                    android:id="@+id/fm_profile_et_birthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@id/fm_profile_icon_birthdate"
                    android:background="@null"
                    android:fontFamily="@font/dosis_semibold"
                    android:inputType="date"
                    android:singleLine="true"
                    android:textColor="#25252D"
                    android:textFontWeight="600"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_cv_gender"
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:layout_below="@id/fm_profile_cv_birthday"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="17dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fm_profile_icon_gender"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/icon_male_and_female"
                    android:backgroundTint="@color/icon_color" />

                <TextView
                    android:id="@+id/fm_profile_et_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@id/fm_profile_icon_gender"
                    android:background="@null"
                    android:fontFamily="@font/dosis_semibold"
                    android:singleLine="true"
                    android:textColor="#25252D"
                    android:textFontWeight="600"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fm_profile_tv_title_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fm_profile_cv_gender"
            android:layout_marginStart="34dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/dosis_semibold"
            android:text="Account info:"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="26sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_cv_mail"
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:layout_below="@id/fm_profile_tv_title_account"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="17dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fm_profile_icon_mail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/icon_email"
                    android:backgroundTint="@color/icon_color" />

                <TextView
                    android:id="@+id/fm_profile_et_mail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@id/fm_profile_icon_mail"
                    android:background="@null"
                    android:fontFamily="@font/dosis_semibold"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/main_menu_background"
                    android:textFontWeight="600"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_cv_pass"
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:layout_below="@id/fm_profile_cv_mail"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="17dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fm_profile_icon_pass"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/icon_pass"
                    android:backgroundTint="@color/icon_color" />

                <TextView
                    android:id="@+id/fm_profile_et_pass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@id/fm_profile_icon_pass"
                    android:background="@null"
                    android:fontFamily="@font/dosis_semibold"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#25252D"
                    android:textFontWeight="600"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_cv_save"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/button_background"
            app:cardCornerRadius="25dp"
            android:layout_below="@id/fm_profile_cv_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fm_profile_tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:fontFamily="@font/dosis_bold"
                    android:textColor="@color/red2"
                    android:textSize="28dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>