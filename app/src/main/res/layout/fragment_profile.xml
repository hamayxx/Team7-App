<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:background="@drawable/bottom_sheet_corners_background"
    tools:context=".fragment.ProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/fm_profile_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textSize="40sp"
                android:textFontWeight="400"
                android:fontFamily="@font/iciel_smoothy_sans"
                android:textColor="@color/category_title"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/fm_profile_tv_title_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal info:"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:fontFamily="@font/dosis_semibold"
                android:textFontWeight="600"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="34dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fm_profile_tv_title" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fm_profile_cv_user"
                android:layout_width="340dp"
                android:layout_height="57dp"
                android:layout_marginTop="17dp"
                android:backgroundTint="@color/white"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fm_profile_tv_title_personal"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fm_profile_icon_user"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_user"
                        android:backgroundTint="@color/icon_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="15dp"/>

                    <EditText
                        android:id="@+id/fm_profile_et_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/dosis_semibold"
                        android:textFontWeight="600"
                        android:textColor="@color/main_menu_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="20sp"
                        android:singleLine="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/fm_profile_icon_user"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fm_profile_cv_birthday"
                android:layout_width="340dp"
                android:layout_height="57dp"
                android:layout_marginTop="17dp"
                android:backgroundTint="@color/white"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fm_profile_cv_user"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fm_profile_icon_birthday"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_birthday"
                        android:backgroundTint="@color/icon_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="15dp"/>

                    <EditText
                        android:id="@+id/fm_profile_et_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:background="@null"
                        android:fontFamily="@font/dosis_semibold"
                        android:textFontWeight="600"
                        android:textColor="#25252D"
                        android:inputType="date"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/fm_profile_icon_birthday"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fm_profile_cv_gender"
                android:layout_width="340dp"
                android:layout_height="57dp"
                android:layout_marginTop="17dp"
                android:backgroundTint="@color/white"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fm_profile_cv_birthday"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fm_profile_icon_gender"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_male_and_female"
                        android:backgroundTint="@color/icon_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="15dp"/>

                    <EditText
                        android:id="@+id/fm_profile_et_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:background="@null"
                        android:fontFamily="@font/dosis_semibold"
                        android:textFontWeight="600"
                        android:textColor="#25252D"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/fm_profile_icon_gender"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/fm_profile_tv_title_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account info:"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:fontFamily="@font/dosis_semibold"
                android:textFontWeight="600"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="34dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fm_profile_cv_gender" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fm_profile_cv_mail"
                android:layout_width="340dp"
                android:layout_height="57dp"
                android:layout_marginTop="17dp"
                android:backgroundTint="@color/white"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fm_profile_tv_title_account"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fm_profile_icon_mail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_email"
                        android:backgroundTint="@color/icon_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="15dp"/>

                    <EditText
                        android:id="@+id/fm_profile_et_mail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:background="@null"
                        android:fontFamily="@font/dosis_semibold"
                        android:textFontWeight="600"
                        android:textColor="@color/main_menu_background"
                        android:inputType="textEmailAddress"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/fm_profile_icon_mail"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fm_profile_cv_pass"
                android:layout_width="340dp"
                android:layout_height="57dp"
                android:layout_marginTop="17dp"
                android:backgroundTint="@color/white"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fm_profile_cv_mail"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fm_profile_icon_pass"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_pass"
                        android:backgroundTint="@color/icon_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="15dp"/>

                    <EditText
                        android:id="@+id/fm_profile_et_pass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:background="@null"
                        android:fontFamily="@font/dosis_semibold"
                        android:textFontWeight="600"
                        android:textColor="#25252D"
                        android:inputType="textPassword"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/fm_profile_icon_pass"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>