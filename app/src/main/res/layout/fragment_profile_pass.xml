<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:background="@drawable/bottom_sheet_corners_background"
    tools:context=".fragment.ProfilePassFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/rectangle"
            android:layout_width="65dp"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:width="65dp"
            android:height="5dp"
            android:background="@color/bar"
            app:cardCornerRadius="50dp" />

        <ImageButton
            android:id="@+id/fm_profile_pass_btn_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_back"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/fm_profile_pass_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dosis_semibold"
            android:text="Enter your password"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="32sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_pass_cv_pass"
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/white"

            android:layout_below="@id/fm_profile_pass_tv_title"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fm_profile_pass_icon_pass"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_pass"
                    android:backgroundTint="@color/icon_color"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"/>

                <EditText
                    android:id="@+id/fm_profile_pass_et_pass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:background="@null"
                    android:fontFamily="@font/dosis_semibold"
                    android:textFontWeight="600"
                    android:textColor="#25252D"
                    android:inputType="textPassword"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/fm_profile_pass_icon_pass"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fm_profile_pass_btn_next"
            android:layout_width="132dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/button_background"
            app:cardCornerRadius="238dp"
            android:elevation="4dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/fm_profile_pass_cv_pass"
            android:layout_alignRight="@id/fm_profile_pass_cv_pass">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Next"
                    android:textColor="@color/text_button"
                    android:textSize="20sp"
                    android:fontFamily="@font/heebo"
                    android:textFontWeight="800" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        
        <TextView
            android:id="@+id/fm_profile_pass_tv_forgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget password?"
            android:textSize="20sp"
            android:fontFamily="@font/heebo"
            android:textColor="@color/white"
            android:layout_marginTop="42dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/fm_profile_pass_btn_next"/>
    </RelativeLayout>



</RelativeLayout>