<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_category"
    tools:context=".fragment.AppsFragment">

    <ImageButton
        android:id="@+id/fm_apps_btn_return"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_back"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/fm_apps_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fm_apps_btn_return"
        android:layout_centerHorizontal="true"
        android:text="APPS"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fm_apps_cv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/fm_apps_tv_title"
        app:cardCornerRadius="25dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/fm_apps_sv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:searchIcon="@null"
            app:defaultQueryHint="Search here..."
            app:iconifiedByDefault="false"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/fm_apps_cl_progress"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_below="@id/fm_apps_cv_search"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ProgressBar
            android:id="@+id/fm_apps_pb_total_used"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle_progress_bar"
            tools:progress="80"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/fm_apps_tv_total_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo"
            android:text="Total Used"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_toEndOf="@id/fm_apps_pb_total_used"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/fm_apps_tv_gb_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo"
            android:text="26.7 GB/ 138 Items"
            android:textColor="#FACE7F"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/fm_apps_tv_total_used"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/fm_apps_pb_total_used"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/fm_apps_btn_adjust"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/icon_adjust"
        android:layout_below="@id/fm_apps_cl_progress"
        android:layout_alignParentEnd="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fm_apps_rv_items"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/fm_apps_btn_adjust"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>