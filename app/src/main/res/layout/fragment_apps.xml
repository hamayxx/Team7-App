<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_category"
    tools:context=".fragment.AppsFragment">

    <ImageButton
        android:id="@+id/fm_apps_btn_return"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/fm_apps_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textStyle="bold"
        android:text="APPS"
        android:textColor="@color/white"
        android:layout_marginTop="47dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fm_apps_cv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/fm_apps_tv_title"
        app:cardCornerRadius="25dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/fm_apps_sv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:searchIcon="@null"
            app:defaultQueryHint="Search here..."
            app:iconifiedByDefault="false"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fm_apps_cl_progress"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fm_apps_cv_search"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ProgressBar
            android:id="@+id/fm_apps_pb_total_used"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle_progress_bar"
            tools:progress="80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/fm_apps_tv_total_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo"
            android:text="Total Used"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:layout_constraintLeft_toRightOf="@id/fm_apps_pb_total_used"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fm_apps_tv_gb_item" />

        <TextView
            android:id="@+id/fm_apps_tv_gb_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo"
            android:text="26.7 GB/ 138 Items"
            android:textSize="24dp"
            android:textColor="#FACE7F"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/fm_apps_pb_total_used"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fm_apps_tv_total_used"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/fm_apps_btn_adjust"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_adjust"
        app:layout_constraintTop_toBottomOf="@id/fm_apps_cl_progress"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="17dp"
        android:layout_marginTop="50dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fm_apps_rv_items"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fm_apps_btn_adjust"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>