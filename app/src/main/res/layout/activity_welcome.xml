<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@drawable/bg_welcome"
    android:orientation="vertical">

    <TextView
        android:id="@+id/a_welcome_tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to \n [File Manager]"
        android:textSize="72sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/iciel_sanelma"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/a_welcome_tv_madeby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="made by team 8"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:fontFamily="@font/iciel_smoothy_sans"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@id/a_welcome_tv_welcome"
        android:layout_alignParentEnd="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/a_welcome_btn_start"
        android:layout_width="119dp"
        android:layout_height="117dp"
        android:backgroundTint="#630A10"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@id/a_welcome_tv_madeby"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get started"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/heebo"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>