<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@drawable/bg_welcome"
    android:orientation="vertical">

    <TextView
        android:id="@+id/a_welcome_tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to \n [File Manager]"
        android:textSize="72sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/iciel_sanelma"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/a_welcome_tv_madeby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="made by team 7"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:fontFamily="@font/iciel_smoothy_sans"
        android:layout_marginTop="90dp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a_welcome_tv_welcome"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/a_welcome_btn_start"
        android:layout_width="119dp"
        android:layout_height="117dp"
        android:backgroundTint="#630A10"
        android:layout_marginTop="70dp"
        android:layout_marginRight="41dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toBottomOf="@id/a_welcome_tv_madeby"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get started"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/heebo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>