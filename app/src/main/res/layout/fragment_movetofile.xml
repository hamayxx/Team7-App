<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:background="@drawable/bottom_sheet_corners_background"
    android:backgroundTint="@color/category_title"
    tools:context=".fragment.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="300dp"
            android:text="MOVE"
            android:fontFamily="@font/dosis_bold"
            android:textSize="28dp"
            android:textColor="@color/red2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="50dp"/>
        <ImageView
            android:id="@+id/fm_movetofile_iv_folder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_folder_grey"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/fm_movetofile_iv_folder"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/dosis_bold"
            android:text="folder name"
            android:textSize="28dp"
            android:textColor="@color/black"/>


</RelativeLayout>